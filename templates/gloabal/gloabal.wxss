/*创作者小卡片*/
.creatorSmailCardBody {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-shadow: 0.5px 1px 1px 1px rgba(0, 0, 0, 0.15);
  transition: box-shadow 0.3s ease-in-out;
  border-radius: 6px;
  padding: 12px;
  margin: 8px 16px;
  margin-left: 1px;
}

.creatorSmailCardBody .creatorSmailCardInfo {
  display: flex;
  flex-direction: row;
}

.creatorSmailCardBody .creatorSmailCardInfo image {
  border-radius: 50%;
  width: 42px;
  height: 42px;
  margin-right: 8px;
}

.creatorSmailCardBody .creatorSmailCardInfo .creatorSmailCreator {
  color: black;
  font-size: 12px;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  width: 80px;
  overflow: hidden;
  font-weight: bold;
}

.creatorSmailCardBody .creatorSmailCardInfo .creatorSmailType {
  color: gray;
  font-size: 10px;
  margin-top: 4px;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  width: 80px;
  overflow: hidden;
}

.creatorSmailCardBody .creatorSmailCardCare {
  margin: auto;
  background-color: #FDEEEB;
  padding: 4px 18px;
  border-radius: 20px;
  font-size: 12px;
  color: #D65145;
  margin-left: 20px;
}


.playTeam {
  margin-top: 16px;
  padding-left: 16px;
  font-size: 14px;
  font-weight: bold;
  width: 100%;
  box-sizing: border-box;
}

.playTeam .playTeamScroll {
  width: 100%;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.playTeam .playTeamScroll ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/*标签列表*/
.tagsBody {
  padding: 8px 16px;
  border: 0.5px solid #F1F1F1;
  border-width: 0.5px 0;
}

.tagsBody .tag {
  display: inline-block;
  font-size: 10px;
  background-color: #F7F7F7;
  padding: 4px 10px;
  margin-right: 8px;
  margin-bottom: 4px;
  border-radius: 4px;
}

/*视频列表*/
.videoListBody {
  padding: 16px;
  padding-top: 0;
}

.videoListBody .videoBody {
  display: flex;
  flex-direction: row;
  padding-top: 20px;
  width: 100%;
}

.videoListBody .videoBody .videoCover {
  width: 200px;
  border-radius: 6px;
}

.videoListBody .videoBody .videoInfos {
  display: inline-block;
  font-size: 10px;
  margin: auto;
  width: 100%;
  margin-left: 8px;
}

.videoListBody .videoBody .videoInfos .videoTitle {
  font-weight: bold;
  font-size: 13px;
}

.videoListBody .videoBody .videoInfos .videoInfo {
  color: gray;
  margin-top: 4px;
  font-weight: 400;
}

.videoListBody .videoBody .videoInfos .videoAuthor {
  margin: auto;
  display: flex;
  flex-direction: row;
  margin-top: 4px;
  font-weight: normal;
  margin-top: 4px;
}

.videoListBody .videoBody .videoInfos .videoAuthor .videoUserName {
  margin: auto 0;
  margin-left: 8px;
}

.videoListBody .videoBody .videoInfos .videoAuthor image {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
}

/*banner*/
.banner {
  padding: 16rpx 22rpx 0 22rpx;
  /*height: 400rpx;*/
}

.banner .title {
  position: absolute;
  left: 0;
  bottom: 0;
  margin: 12px 14px;
  color: white;
}

.banner .indexContent {
  position: absolute;
  right: 0;
  bottom: 0;
  color: white;
  margin: 12px 14px;
  font-size: small;
}

.banner .index {
  color: white;
  font-weight: bold;
  display: inline;
  font-size: large;
}