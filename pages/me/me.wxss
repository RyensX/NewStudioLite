/* pages/me/me.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}

.meContent {}

.meContent .hint {
  color: #E24D3D;
  font-size: 11px;
  margin: auto;
}

.meContent .actionsHeader {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 32rpx;
}

.meContent .header {
  width: 100%;
  height: 350rpx;
  position: relative;
}

.meContent .actions {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 32rpx;
  padding-top: 15rpx;
  justify-content: space-between;
}

.meContent .header .menus {
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
}

.meContent .header .menus>van-icon {
  margin-left: 18rpx;
}

.meContent .header .user {
  position: absolute;
  left: calc(50% - 50rpx);
  top: calc(50% - 80rpx);
  display: flex;
  flex-direction: column;
}

.meContent .menu {
  display: inline;
}

.meContent .tag {
  display: inline;
  border: 0.5px solid #E24D3D;
  color: #E24D3D;
  border-radius: 20%;
  font-size: 8px;
  padding: 2rpx;
  margin: auto;
  margin-left: 16rpx;
}

.meContent .header .user .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.meContent .header .user .nickname {
  margin: auto;
  margin-top: 16rpx;
  font-size: 14px;
}

.mePageActionCard {
  width: 48%;

}

.mePageActionCard .content {
  background-color: white;
  border-radius: 8px;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0.5px 1px 1px 1.5px rgba(0, 0, 0, 0.05);
  transition: box-shadow 0.3s ease-in-out;
}

.mePageActionCard .content image {
  width: 40rpx;
  height: 40rpx;
  padding: 16rpx;
}

.mePageActionCard .content .info {
  display: flex;
  flex-direction: column;
  margin: auto;
}

.mePageActionCard .content .info .title {
  font-size: 12.5px;
  color: black;
  font-weight: bold;
}

.mePageActionCard .content .info .desc {
  font-size: 10px;
  color: gray;
  margin-top: 6rpx;
}